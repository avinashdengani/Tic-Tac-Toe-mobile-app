<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="How to Play?"
            android:background="@color/white"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCloseDialogBox"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="❌"
            android:foreground="?attr/selectableItemBackground"
            android:backgroundTint="@color/white"
            android:textSize="20sp"
            android:padding="10dp"
            android:gravity="end"
            android:radius="0dp"
            app:cornerRadius="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp">
        </com.google.android.material.button.MaterialButton>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:text="👉🏻 The game is played on a grid that's 3 squares by 3 squares.\n👉🏻One of the player is  'X' and other is 'O'.\n👉🏻The first player to get 3 of his/her marks in a row (up, down, across, or diagonally) is the winner.\n👉🏻When all 9 squares are full, the game is over."
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOkay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:textSize="20dp"
            android:textColor="@color/grey"
            android:foreground="?attr/selectableItemBackground"
            android:padding="10dp"
            android:text="Okay!!"
            android:layout_margin="10dp"/>
    </LinearLayout>
</LinearLayout>